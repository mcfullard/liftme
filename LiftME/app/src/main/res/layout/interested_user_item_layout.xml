<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rLInterestedUsrLayout">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutContainer">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iVInterestedCircle"
                android:background="@mipmap/ic_circle"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="L"
                android:id="@+id/tVFirstLetter"
                android:textColor="#ffffff"
                android:textAlignment="gravity"
                android:gravity="center_vertical|center"
                android:layout_alignTop="@+id/iVInterestedCircle"
                android:layout_alignEnd="@+id/iVInterestedCircle"
                android:layout_alignBottom="@+id/iVInterestedCircle"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp">

            <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="tVInterestedUserName"
                        android:id="@+id/tVInterestedUserName"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iVHasCar"
                android:layout_alignTop="@+id/tVInterestedUserName"
                android:layout_alignBottom="@+id/tVInterestedUserName"
                android:layout_toRightOf="@+id/tVInterestedUserName"
                android:src="@drawable/ic_directions_car"
                android:tint="#9e9e9e" />

            <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                        android:text="Some Title"
                        android:id="@+id/tVInterestedUserEmail"
                        android:layout_weight="4"
                        android:layout_gravity="right"
                        android:gravity="left|center_vertical"
                        android:layout_toEndOf="@+id/iVEmailIcon"
                        android:layout_alignBaseline="@+id/iVEmailIcon"
                        android:layout_alignTop="@+id/iVEmailIcon"
                        android:layout_alignBottom="@+id/iVEmailIcon" />

            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/space3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:text="Some Title"
                    android:id="@+id/tVInterestedUserPhone"
                    android:layout_weight="4"
                    android:layout_gravity="right"
                    android:gravity="left|center_vertical"
                    android:layout_alignTop="@+id/iVPhoneIcon"
                    android:layout_alignStart="@+id/tVInterestedUserEmail"
                    android:layout_alignBottom="@+id/iVPhoneIcon" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iVEmailIcon"
                android:src="@drawable/ic_email_black_18dp"
                android:tint="#9e9e9e"
                android:layout_alignStart="@+id/tVInterestedUserName"
                android:layout_below="@+id/tVInterestedUserName" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iVPhoneIcon"
                android:src="@drawable/ic_call_black_18dp"
                android:layout_below="@+id/iVEmailIcon"
                android:layout_toStartOf="@+id/tVInterestedUserPhone"
                android:tint="#9e9e9e" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_below="@+id/layoutContainer"
        android:layout_margin="10dp"
        android:id="@+id/interestedUserDividor" />

</RelativeLayout>