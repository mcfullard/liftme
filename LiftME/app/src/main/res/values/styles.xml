<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:datePickerDialogTheme">@style/MyDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/MyDialogTheme</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#000000</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="SecondaryButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="SecondaryButtonStyleDark" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>

    <style name="LoginTextStyle" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#ffffff</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
